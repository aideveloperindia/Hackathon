{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/client",
  "installCommand": "npm install --include=dev",
  "framework": null,
  "nodeVersion": "18.x",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3.0.7",
      "includeFiles": "src/server/**"
    }
  }
}
